            <!--android:textSize="18sp"-->
            <!--android:text="记住密码" />-->

    <!--</LinearLayout>-->

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@drawable/shape"
        android:layout_gravity="center"
        android:text="登陆" />
